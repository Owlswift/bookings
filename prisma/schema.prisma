generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ServiceType {
  MANICURE
  PEDICURE
  HAIRCUT
}

enum Role {
  USER
  PROVIDER
  ADMIN
}

model Booking {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      Int
  providerId  Int
  serviceType ServiceType
  startTime   DateTime
  endTime     DateTime
  status      String      @default("CONFIRMED")

  @@index([providerId])
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}
